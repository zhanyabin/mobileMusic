{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "pages/*": ["src/pages/*"],
            "components/*": ["src/components/*"],
            "modules/*": ["src/modules/*"],
            "types/*": ["src/types/*"],
            "utils/*": ["src/utils/*"],
            "routers/*": ["src/routers/*"],
            "assets/*": ["src/assets/*"],
            "styles/*": ["src/styles/*"],
            "layouts/*": ["src/layouts/*"],
            "configs/*": ["src/configs/*"]
        }
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
